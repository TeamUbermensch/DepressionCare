<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_weight="1">

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_gravity="center"
        android:textSize="20sp"

        android:text="우울증 자가 진단 테스트" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8. 일, 공부들을 시작할 때 의지가 약해진거 같다."
        android:layout_marginLeft="10sp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9. 자신에게 자주 실망감을 느낀다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10. 잠자리에 누우면 쉽게 잠이루지 못한다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11. 나는 사회에서 쓸모없는 사람이라고 생각한다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12. 미래에 대해 희망이 없다고 느낀다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13. 별거 아닌 일에 스트레스를 받고 신경질을 낸다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14. 다른 사람들에게 나보다 좋은 점만 보이고 열등감을 느낀다."

        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다."

            android:layout_marginLeft="10sp"/>

        <CheckBox
            android:id="@+id/checkBox14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다."

            android:layout_marginLeft="10sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:text="다음 페이지" />



</LinearLayout>